        <% include ../attachments/_show %>
    </div>

    <div>
        Title: <b><%= instant.title %></b>
        <br />
        Description: <b><%= instant.description %></b>
        <br />
        <small> by <%= instant.author ? instant.author.displayName : "Anonymous" %> </small>
    </div>

</div>

